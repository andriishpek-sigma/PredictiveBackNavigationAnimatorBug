<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together">

    <objectAnimator
        android:propertyName="alpha"
        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:duration="@integer/screen_anim_duration"
        android:interpolator="@interpolator/screen_anim_interpolator" />

    <objectAnimator
        android:propertyName="translationX"
        android:valueFrom="0"
        android:valueTo="@dimen/screen_anim_slide_distance_start"
        android:duration="@integer/screen_anim_duration"
        android:interpolator="@interpolator/screen_anim_interpolator" />
</set>
